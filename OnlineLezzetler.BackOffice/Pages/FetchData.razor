@page "/fetchdata"
@using OnlineLezzetler.Business.AutoMapper.Dtos
@using OnlineLezzetler.Business.Models

<PageTitle>Weather forecast</PageTitle>



<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (cities == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>City</th>
                <th>Region ID</th>
                <th>Postal Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in cities.ResultObject)
            {
                <tr>
                    <td>@forecast.CityID</td>
                    <td>@forecast.CityName</td>
                    <td>@forecast.RegionID</td>
                    <td>@forecast.PostalCode</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    SearchResult<List<CityDto>> cities = new();

    protected override  void OnInitialized()
    {
        cities =  _cityService.GetCities();
    }
    
    
}
